---
import { BookOpen, FolderCode, Home, Award, Link2, Lightbulb } from "@lucide/astro";
import ThemeToggle from "./ThemeToggle.astro";
import ThemeSelector from "./ThemeSelector.astro";
import { siteConfig } from "../config";

interface Props {
  currentPage?: "home" | "blog" | "projects" | "honors" | "links";
}

const { currentPage = "home" } = Astro.props;
---

<div class="fixed top-4 left-4 z-50 flex items-center gap-2">
  <!-- Home Button -->
  <a
    href="/"
    class={`btn btn-sm gap-0 ${currentPage === "home" ? "btn-primary" : "btn-ghost"}`}
  >
    <Home class="size-4" />
  </a>
  <!-- Wikipedia Random Button -->
  <a
    href="https://randomincategory.toolforge.org/Featured_articles?site=en.wikipedia.org"
    target="_blank"
    rel="noopener noreferrer"
    class="btn btn-sm gap-0 btn-ghost"
    title="Something new"
  >
    <Lightbulb class="size-4" />
  </a>
</div>

<div class="fixed top-4 right-4 z-50 flex items-center gap-3">
  <!-- Navigation Buttons -->
  <a
    href="/blog"
    class={`btn btn-sm gap-1 ${currentPage === "blog" ? "btn-primary" : "btn-ghost"}`}
  >
    <BookOpen class="size-4" />
    <span class="hidden sm:inline">Blog</span>
  </a>
  <a
    href="/projects"
    class={`btn btn-sm gap-1 ${currentPage === "projects" ? "btn-primary" : "btn-ghost"}`}
  >
    <FolderCode class="size-4" />
    <span class="hidden sm:inline">Projects</span>
  </a>
  <a
    href="/honors"
    class={`btn btn-sm gap-1 ${currentPage === "honors" ? "btn-primary" : "btn-ghost"}`}
  >
    <Award class="size-4" />
    <span class="hidden sm:inline">Honors</span>
  </a>
  <a
    href="/links"
    class={`btn btn-sm gap-1 ${currentPage === "links" ? "btn-primary" : "btn-ghost"}`}
  >
    <Link2 class="size-4" />
    <span class="hidden sm:inline">Links</span>
  </a>

  <!-- Theme Toggle -->
  <div class="divider divider-horizontal m-0 h-6 w-px mt-2"></div>
  {siteConfig.enableThemeSelector ? <ThemeSelector /> : <ThemeToggle />}
</div>
